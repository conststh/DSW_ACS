<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>activity.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

<!--    <logger name="baseNoStates.Locked" level="info" />-->
<!--    <logger name="baseNoStates.Unlocked" level="info" />-->
<!--    <logger name="baseNoStates.Propped" level="info" />-->
<!--    <logger name="baseNoStates.requests" level="info" />-->
    <logger name="baseNoStates.visitors" level="debug" />
<!--    <logger name="baseNoStates.WebServer" level="info" />-->
    <root level="OFF">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>